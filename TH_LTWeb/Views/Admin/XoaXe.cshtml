@model TH_LTWeb.Models.XEGANMAY

@{
    ViewBag.Title = "XoaXe";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Xác nhận thông tin cần Xóa</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>XEGANMAY</h4>
    <hr />
    <dl class="dl-horizontal">


        <dt>
            Tên Xe
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenXe)
        </dd>

        <dt>
            Giá bán
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Giaban)
        </dd>

        <dt>
            Mô tả
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Mota)
        </dd>

        <dt>
            Ảnh bìa
        </dt>

        <dd>
            <img src="@Url.Content("~/Content/Images/XE/Yamaha/" +Model.Anhbia)" width="120px" />
        </dd>

        <dt>
            Ngày cập nhật
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Ngaycapnhat)
        </dd>

        <dt>
            Số lượng tồn
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Soluongton)
        </dd>

        <dt>
            Loại xe
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaLX)
        </dd>

        <dt>
            Nhà phân phối
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaNPP)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Xe")
        </div>
    }
</div>

<style>
    /* General Layout */
    .dl-horizontal dt {
        font-weight: bold;
        padding-right: 10px;
        width: 150px;
    }

    .dl-horizontal dd {
        margin-left: 160px;
        margin-bottom: 10px;
    }

        /* Styling the image */
        .dl-horizontal dd img {
            border: 1px solid #ddd;
            padding: 5px;
            border-radius: 5px;
            max-width: 100%;
            height: auto;
        }

    /* Title Styling */
    h2 {
        text-align: center;
        color: #5a5a5a;
        margin-bottom: 20px;
    }

    h4 {
        font-size: 18px;
        color: #333;
        font-weight: bold;
    }

    /* Button Styling */
    p {
        text-align: center;
        margin-top: 20px;
    }

        p a {
            text-decoration: none;
            background-color: #007bff;
            color: white;
            padding: 10px 20px;
            border-radius: 5px;
            margin: 0 10px;
            font-weight: bold;
        }

            p a:hover {
                background-color: #0056b3;
            }

    /* Section divider */
    hr {
        border-top: 2px solid #ccc;
        width: 100%;
    }
</style>